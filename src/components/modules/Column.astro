---
const { Element = "div", className, ...rest } = Astro.props;
---

<Element class:list={["column", className]} {...rest}>
  <slot />
</Element>

<style>
  .column {
    position: relative;

    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .column--contain {
    --max-width: 18.75rem;
    flex: 1 1 var(--max-width);
    max-width: 18.75rem;
  }

  .column--stretch {
    flex: 1 1 auto;
  }
</style>
