---
import Heading from "#components/primitives/Heading.astro";

const { class: className = "", Element = "div", ...props } = Astro.props;
---

<Element class:list={["line-item", className]} {...props}>
  <Heading Element="h4"><slot name="title" /></Heading>
  <slot name="description" />
</Element>

<style>
  .line-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
</style>
