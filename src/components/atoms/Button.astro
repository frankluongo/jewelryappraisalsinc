---
const { variant = "primary", Element = "button", ...rest } = Astro.props;
---

<Element class=`button button--${variant}` {...rest}><slot /></Element>

<style>
  .button {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0.5rem 1rem;
    gap: 0.5rem;

    color: var(--theme-color-action-primary--default);
    text-decoration: none;

    appearance: none;
    background: var(--theme-color-action-primary--accent);
    border-radius: 0.5rem;
    border: 1px solid var(--theme-color-action-primary--default);
    cursor: pointer;
    transition:
      color var(--theme-transition--default),
      background var(--theme-transition--default),
      border-color var(--theme-transition--default);
  }

  .button:is(:hover, :focus, :focus-visible) {
    color: var(--theme-color-action-primary--accent);

    background: var(--theme-color-action-primary--default);
  }
</style>
