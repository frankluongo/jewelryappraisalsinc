---
const { className, Element = "h1", ...rest } = Astro.props;
---

<Element class:list={[className, "heading", `heading--${Element}`]} {...rest}>
  <slot />
</Element>

<style>
  .heading {
    color: var(--theme-color-heading--default);
  }

  .heading--h1 {
    font-size: clamp(3rem, 6vw, var(--font-size--4xl));
  }

  .heading--h2 {
    font-family: var(--theme-font-secondary);
    font-style: italic;
    font-size: clamp(2rem, 5vw, 3.2rem);
    font-weight: 700;
  }

  .heading--h3 {
    font-size: 1.5rem; /* 1.5rem; */
    font-weight: 700;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .heading--h4 {
    font-size: 1rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .heading--h5 {
    font-size: clamp(1.175rem, 2vw, 2rem);
  }

  .heading--h6 {
    font-size: 0.875rem;
  }
</style>
